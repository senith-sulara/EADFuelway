<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateStationScreen">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="429dp"
        android:layout_height="865dp"
        android:scaleType="fitXY"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wals" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        <ImageView-->
        <!--            android:id="@+id/imageView5"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="86dp"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            app:srcCompat="@drawable/fuel" />-->

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:text="TextView"
            android:textColor="#2D0C57"
            android:textSize="22sp" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="186dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:text="Petrol"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:text="Arrival Time"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timepicker"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Select Time Here"
            android:textColor="#2D0C57"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="25dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Liters"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/petLit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bkground"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L"
                android:textColor="#000"
                android:textSize="26sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/switch3"
            android:layout_width="186dp"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:text="Diesel"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:text="Arrival Time"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timepicker2"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="Select Time Here"
            android:textColor="#2D0C57"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="10dp"

            android:layout_marginRight="25dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Liters"
                android:textColor="#000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/dieselLiter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bkground"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="5dp"
                android:textColor="#000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/liter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L"
                android:textColor="#000"
                android:textSize="26sp" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="10dp"

            android:text="Update"
            app:backgroundTint="#A76CF3"
            app:cornerRadius="18dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>